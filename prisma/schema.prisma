// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Users {
  id    Int     @id @default(autoincrement())
  username String  @unique
  email  String @unique
  password String
  notes Notes[] 
}

model Notes {
  id        Int     @id @default(autoincrement())
  content   String
  author    Users   @relation(fields: [authorId], references: [id])
  authorId  Int
}